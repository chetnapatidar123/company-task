<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
  <div class="d-flex justify-content-center align-items-center flex-column">
  <a class="btn btn-primary m-3 fs-2 w-75" href="/">Home</a>
  <a class="btn btn-primary m-3 fs-2 w-75" href="/exportuser">Show in Excel</a>
</div>
  <table class="table">
    <thead class="thead-dark">
        <tr class="bg-secondary text-light">
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Status</th>
            <th>Task</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
     
      <% for(var i = 0; i < data.length; i++) { %>
        <tr>
            <td><%= i + 1 %></td>
            <td><%= data[i].name %></td>
            <td><%= data[i].email %></td>
            <td><%= data[i].contact %></td>
            <td><%= data[i].task %></td>
            <td><%= data[i].status %></td>
            <td>
              <a class="btn border-shadow update" href="/update/<%= data[i]._id%>" >
                <i class="ri-edit-2-line text-primary fs-4" ></i>
            </a>
            <a class="btn border-shadow update" onclick="myFunction()" href="/delete/<%= data[i]._id%>">
              <i class="ri-delete-bin-line text-danger fs-4"></i></a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
   
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
<script>
function myFunction() {
  alert("User Data Deleted Successfully!");
}
</script>
</body>
</html>